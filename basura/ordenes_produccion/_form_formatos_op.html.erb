<div class="offset-md-10">
  <%= link_to '<button class="btn btn-outline-info"><span>Produccion Repetida <i class="ion-android-document"></i></span></button>'.html_safe, new_orden_produccion_path %>
</div>

<br>
<%= simple_form_for(@formato_op) do |f| %>
  <%= f.error_notification %>





  <div class="card text-center">

     <div class="card-header">
        <h1>Ordenes De Producci√≥n</h1>

     </div>

     <!--Card Block-->
     <div class="card-block">
        <h4 class="card-title"></h4>
        <div class="container">
           <!--Container Con Flexbox-->
           <div class="my_card_pedidos_form">


             <!--Numero de Orden-->
             <div class="col-3">
               <%= f.input :referencia_de_orden %>
             </div>


             <!--Vendedor-->
             <div class="col-3">
               <label for="">Vendedor</label> <br>
               <%= f.association :user,
               collection: User.all,
               label_method: :nombre,
               value_method: :id,
               as: :select,
               label:false,
               class:'col-4 my_cliente form-control',
               include_blank: 'Seleccione al Vendedor'
               %>
             </div>

             <!--Linea de Producto-->
             <div class="col-3">
               <%= f.association :linea_producto,
               collection: LineaProducto.all,
               label_method: :nombre,
               value_method: :id,
               as: :select,
               class:'col-4 my_cliente form-control',
               include_blank: 'Linea Producto'
               %>

             </div>


             <!--Montaje-->
             <div class="col-3">
               <%= f.association :montaje,
               collection: Montaje.all,
               class:'',
               label_method: :nombre,
               value_method: :id,
               as: :select,
               include_blank: 'Seleccionar Montaje'
               %>
               <!--%=f.select :descripcion,Montaje.all.map {|i| [i.nombre, i.id]}, {}, {required: 'true', autofocus: 'true', class: 'js-example-tags form-control'} %-->
             </div>




           </div>
           <!--/Container con Flexbox-->
        </div>
        <!--Container-->
        <br>
     </div>
     <!--/Card Block-->
  </div>
  <!--/Datos Generales del Pedido---->
  <br>

<br>




<div class="card card-outline-secondary mb-3 text-center">
   <div class="card-block">
      <div class="container">
         <br>
         <br>
         <div class="my_card_pedidos_form">


                        <!--div class="col-4">
                          <%= f.input :tipo_de_linea %>
                        </div-->

                        <div class="col-4">
                          <%= f.input :material %>
                        </div>


                        <!--Linea De Color-->
                        <div class="col-4">
                          <%= f.association :linea_de_color,
                          collection: LineaDeColor.all,
                          label_method: :nombre,
                          value_method: :id,
                          as: :select,
                          class:'col-4 my_cliente form-control',
                          include_blank: 'Linea De Color'
                          %>
                        </div>



                        <!--Maquina-->
                        <div class="col-4">
                          <%= f.association :maquina,
                          collection: Maquina.all,
                          label_method: :nombre,
                          value_method: :id,
                          as: :select,
                          class:'col-4 my_cliente form-control',
                          include_blank: 'Seleccione la Maquina'
                          %>
                        </div>


                        <!--Pieza A Decorar-->
                        <div class="col-4">
                          <%= f.association :pieza_a_decorar,
                          collection: PiezaADecorar.all,
                          label_method: :nombre,
                          value_method: :id,
                          as: :select,
                          class:'col-4 my_cliente form-control',
                          include_blank: 'Pieza A Decorar'

                          %>
                        </div>





                            <div class="col-4">

                              <%= f.input :observacion %>
                            </div>
         </div>
      </div>
   </div>
</div>

  <div class="">
    <%= f.simple_fields_for :ordenes_produccion do |builder| %>
       <%= render "orden_produccion_fields", :f => builder %>
    <% end %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
