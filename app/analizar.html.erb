<% @ordenes_produccion.each do |orden_produccion| %>
      <tr>
        <td><%= orden_produccion.numero_de_orden %></td>
        <td><%= orden_produccion.formato_op.montaje.cliente.nombre%></td>
        <td><%= orden_produccion.formato_op.montaje.nombre %></td>
        <td><%= orden_produccion.formato_op.maquina.nombre%></td>
        <td><%= orden_produccion.formato_op.linea_de_color.nombre %></td>
        <!--td><%= orden_produccion.mes.nombre%></td-->

        <%
    			@date = Time.now.strftime("%Y/%m/%d")
          @dat = Date.parse(@date)
    		%>

        <% orden_produccion.compromisos_de_entrega.each do  |fecha| %>

                <%fech = fecha.fecha_de_compromiso
                  fech.strftime("%Y/%m/%d")
                %>
              <% if   @dat == fech %>

                <%@dates = fech%>

              <%elsif fech.to_time < @dat%>

                <%@dates = fech%>
              <%else%>
              <%
          			@dates = fech
          		%>
                <% if fech < @dates %>
                  <!-- true -->
                  <%@dates = fech%>
                <% end %>

              <% end %>


        <% end %>
