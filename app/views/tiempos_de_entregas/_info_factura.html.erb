<! ------------------Información Del Pedido---------------------------------->
<div class="container card-block">
  <div class="container my_card_pedidos_form my_orden_pedidos">
    <div class="col-4">
      <label for="">Cliente</label>
      <h4 ><%= @pedido.contacto.cliente.nombre%></h4>
    </div>
    <div class="col-4">
      <label for="">Tipo De Trabajo</label>
      <h4 ><%=@pedido.descripcion%></h4>
    </div>
    <div class="col-4">
      <label for="">Numero de Pedido</label>
      <h4 ><%=@pedido.numero_de_pedido%></h4>
    </div>
  </div>

<! ------------------Información Del Pedido---------------------------------->



</div>

<hr>

<div class="">
  <table class="table">
    <thead>
      <th>Numero de Remisio</th>
      <th>Fecha De Despacho</th>
      <th>Cantidad Enviada</th>
      <th>Precio A Facturar</th>
    </thead>
    <tbody>
      <%@pedido.tiempos_de_entregas.each do |remisiones|%>
        <tr>
          <td><%=remisiones.remision%></td>
          <td><%=remisiones.fecha_de_despacho%></td>
          <td><%=remisiones.cantidad_enviada%></td>
          <td><%=remisiones.precio_a_facturar%></td>
        </tr>
      <%end%>
    </tbody>
  </table>


  <div class="">
    <%= link_to '<button class="btn btn-outline-success"><span>Cerrar Pedido <i class="ion-pin"></i></span></button>'.html_safe,
    cerrar_pedido_path(@pedido),remote: true %>
  </div>

</div>
