<p id="notice"><%= notice %></p>

<h1>Piezas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Montaje</th>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @piezas.each do |pieza| %>
      <tr>
        <td><%= pieza.montaje.nombre %></td>
        <td><%= pieza.nombre %></td>
        <td><%= pieza.cantidad %></td>
        <td><%= link_to 'Show', pieza %></td>
        <td><%= link_to 'Edit', edit_pieza_path(pieza) %></td>
        <td><%= link_to 'Destroy', pieza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

