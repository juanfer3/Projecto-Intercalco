<%else%>
<% @materiales.each do |material| %>
  <tr>
    <td><%= material.codigo %></td>
    <td><%= material.descripcion %></td>

    <td><%= link_to '<button class="btn btn-outline-info"><span><i class="ion-eye"></i></span></button>'.html_safe, material, remote: true %></td>
