        <td><%= link_to '<button class="btn btn-outline-warning"><span><i class="ion-document-text"></i></span></button>'.html_safe, edit_compromiso_de_entrega_path(compromiso_de_entrega), remote:true %></td>

      </tr>
    <% end %>
  </tbody>
</table>


