<! ------------------Información Del Pedido---------------------------------->
<div class="container card-block">
  <div class="container my_card_pedidos_form my_orden_pedidos">
    <div class="col-3">
      <label for="">Cliente</label>
      <h4 ><%= @compromiso_de_entrega.orden_produccion.montaje.cliente.nombre%></h4>
    </div>
    <div class="col-3">
      <label for="">Descripción</label>
      <h4 ><%= @compromiso_de_entrega.orden_produccion.montaje.nombre%></h4>
    </div>
    <div class="col-3">
      <label for="">Numero de Orden</label>
      <h4><%= @compromiso_de_entrega.orden_produccion.numero_de_orden%></h4>
    </div>
    <div class="col-3">
      <label for="">Fecha</label>
      <h4><%= @compromiso_de_entrega.fecha_de_compromiso%></h4>
    </div>
  </div>
</div>

<hr>

<%= simple_form_for(@compromiso_de_entrega, remote:true) do |f| %>
  <%= f.error_notification %>




  <div class="container my_card_pedidos_form my_orden_pedidos">

    <div class="col-3">
      <%= f.input :numero_de_remision %>
    </div>
    <div class="col-3">
      <label for="">Fecha real de despacho</label>
      <div class="input-group" >
        <%= f.text_field :fecha_despacho , class: "form-control", "data-date-format" => "yyyy/mm/dd", 'data-provide' => 'datepicker'%>
        <span class="input-group-addon " id="basic-addon2"> <i class="fa-li fa fa-spinner fa-spin"></i> </span>

      </div>

    </div>
    <div class="col-3">
      <label for="">Cantidad Despachada</label>
      <%= f.input :cantidad_despacho, label:false %>
    </div>
    <div class="form-actions col-3">
      <label for="">Aceptar Cambios</label>
      <%= f.button :submit %>
    </div>

  </div>


<% end %>
