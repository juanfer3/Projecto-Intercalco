<p id="notice"><%= notice %></p>






<div class="my_card_pedidos_form">


      <div class="col-6">
        <h1>Lineas de Colores</h1>
      </div>

      <div class="col-3 offset-md-3">
        <%= link_to '<button type="button" class="btn btn-outline-dark float-xl-right">Linea nueva</button>'.html_safe, new_lineas_de_color_pat %>

      </div>

</div>

<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @lineas_de_colores.each do |linea_de_color| %>
      <tr>
        <td><%= linea_de_color.nombre %></td>

        <td><%= link_to '<button class="btn btn-outline-warning"><span><i class="ion-paintbrush"></i></span></button>'.html_safe.html_safe, edit_linea_de_color_path(linea_de_color) %></td>
        <td><%= link_to '<button class="btn btn-outline-danger"><span><i class="ion-trash-a"></i></i></span></button>'.html_safe, linea_de_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="">
  <br>
</div>
