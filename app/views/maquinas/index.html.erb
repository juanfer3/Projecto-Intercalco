<p id="notice"><%= notice %></p>

<h1>Maquinas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @maquinas.each do |maquina| %>
      <tr>
        <td><%= maquina.nombre %></td>
        <td><%= maquina.descripcion %></td>
        <td><%= link_to '<button class="btn btn-outline-warning"><span><i class="ion-paintbrush"></i></span></button>'.html_safe, edit_maquina_path(maquina) %></td>
        <td><%= link_to '<button class="btn btn-outline-danger"><span><i class="ion-trash-a"></i></i></span></button>'.html_safe, maquina, method: :delete, data: { confirm: 'Desea eliminar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

