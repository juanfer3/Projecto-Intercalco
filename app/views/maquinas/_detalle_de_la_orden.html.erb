<! ------------------Información Del Pedido---------------------------------->
<div class="container card-block">
  <div class="container my_card_pedidos_form my_orden_pedidos">
    <div class="col-4">
      <label for="">Cliente</label>

      <h4 ><%= @orden_produccion.montaje.cliente.nombre%> <br> <p> <%=@orden_produccion.montaje.cliente.user.nombre%> </p></h4>
    </div>
    <div class="col-4">
      <label for="">Producto</label>
      <h4 ><%= @orden_produccion.montaje.nombre%></h4>
    </div>
    <div class="col-4">
      <label for="">Numero de Orden</label>
      <h4><%= @orden_produccion.numero_de_orden%></h4>
    </div>
  </div>
</div>

<hr>
<%if @orden_produccion.orden_nueva == true%>
  <div class="col-md-6 offset-md-5">
    <h5> <span class="badge badge-warning">Producción nueva</span>  </h5>
  </div>
<%else%>
  <div class="col-md-6 offset-md-5">
    <h5> <span class="badge badge-info">Producción repetida</span>  </h5>
  </div>
<%end%>

<hr>



<% if @orden_produccion.programaciones_op_maquinas.empty? %>


  <!-- formulario para programacion -->
  <%= simple_form_for(@programacion_op_maquina, layout: :inline) do |f| %>
    <%= f.error_notification %>


    <div class="form-inputs">
      <div class="ocultar">
          <%= f.input :orden_produccion_id,
          :input_html => { :value => @orden_produccion.id },
          class: "ocultar"
            %>
      </div>

      <div class="ocultar col-3">
        <%= f.input :maquina_id %>
      </div>




      <div class="my_card_pedidos_form">


        <div class="col-4">
          <label for="">Cantidad de unidades</label><br>
          <h6 id="cantidad_total_pedida"> <strong ALING="CENTER"><%=number_to_currency_no_moneda(@orden_produccion.cantidad_solicitada) %></strong> </h6>
        </div>

        <div class="col-4">
          <label for="">Cantidad de tamaños</label>
          <h6 id="tamanos_totales"> <strong><%=number_to_currency_no_moneda(@orden_produccion.tamanos_total)%></strong> </h6>
        </div>

        <div class="col-4">
          <label for="">Cantidad de tintas</label>
          <h6> <strong><%=number_to_currency_no_moneda(@orden_produccion.montaje.desarrollos_de_tintas.length)%></strong> </h6>
        </div>



        <div class="col-12">
          <br>
        </div>

        <div class="col-4">
          <%= f.input :tiempo_de_montaje %>
        </div>

        <div class="col-4">
          <%= f.input :tiempo_de_desmontaje %>
        </div>

        <div class="col-4">
          <label for="">CANTIDAD DE MÁQUINAS</label><br>
          <div class="col-4">
            <%= f.input :cantidad_maquinas ,  label:false%>
          </div>
        </div>


      <div class="col-4">
        <%= f.input :total_hora %>
      </div>



      <div class="col-4">
        <%= f.input :hora_inicio %>
      </div>

      <div class="col-4">
        <%= f.input :hora_final %>
      </div>



      <div class="col-4">
        <%= f.input :tiempo_por_maquina %>
      </div>



      <div class="col-4">
        <%= f.input :complemento %>
      </div>
      </div>








    </div>

    <div class="form-actions col-3">
      <%= f.button :submit %>
    </div>


  <% end %>


<% else %>
  <h5>SI HAY PROGRAMACION</h5>
<% end %>
