<%= simple_form_for @user, remote: true do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :user_nombre %>
  </div>

  <div class="field">
    <%= form.label :numero_celular %>
    <%= form.text_field :numero_celular, id: :user_numero_celular %>
  </div>

  <div class="field">
    <%= form.label :rol_id %>
    <%= form.association :rol%>
  </div>

  <div class="field">
    <%= form.label :estado %>
    <%= form.check_box :estado, id: :user_estado %>
  </div>
  
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>
  
  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password%>
  </div>
  
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
