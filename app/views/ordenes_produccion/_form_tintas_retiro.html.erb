

<%= simple_form_for(@tinta_fop_retiro, remote: true) do |f| %>
  <%= f.error_notification %>

<div class="my_card_produccion">


    <div class="col-3" id="ocultarMontaje">
      <%=
      f.association :montaje,
      collection: Montaje.all,
      label_method: :nombre,
      value_method: :id,
      as: :select,
      class:'  form-control',
      selected: @montaje.id


      %>
    </div>

    <div class="col-3">
      <label for="">Seleccione la malla</label><br>
      <%= f.select :malla_id, Malla.all.map {|i|[i.nombre, i.id]}, {}, {required: 'true', autofocus: 'true', class: 'js-example-tags form-control limpiar_select_malla', id: "select_malla"} %>
    </div>

    <div class="col-3">
      <label for="">Seleccione la tinta</label><br>
      <%= f.select :descripcion , @Tintas.map {|i|[i, i]}, {}, {required: 'true', autofocus: 'true', class: 'js-example-tags form-control limpiar_select_tinta', id: "select_tinta"}%>
    </div>

    <div class="col-3">
      <label for=""></label><br>
      <%= button_tag type: 'submit', class: "btn btn-outline-info col-3", id: "register-button" do %>
        <i class="ion-shuffle" aria-hidden="true"></i>
       <% end %>
    </div>

    <div class="3">

        <label for=""></label> <br>

        <button type="button" class="btn btn-outline-danger " id="borrarRetiroTintaNueva"><span><i class="ion-trash-a"></i></span></button>

    </div>

  <% end %>
</div>
