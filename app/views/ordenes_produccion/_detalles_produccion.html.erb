                      <td><%=desarrollo.linea_de_color.nombre%></td>
                      <td><%=desarrollo.malla.nombre%></td>

                      <% if desarrollo.tiro== true %>
                        <td>
                          <span><i class="ion-checkmark-circled"></i> </span>
                        </td>
                      <% else %>
                        <td></td>
                      <% end %>



                      <% if desarrollo.retiro== true %>
                        <td>
                          <span><i class="ion-checkmark-circled"></i> </span>
                        </td>
                      <% else %>
                          <td></td>
                      <% end %>






                      <td><%= link_to '<button class="btn btn-outline-danger"><span><i class="ion-trash-a"></i></i></span></button>'.html_safe, desarrollo, method: :delete, data: { confirm: 'Are you sure?' } , remote:true%></td>
                    </tr>
                  <%end%>
                </tbody>
