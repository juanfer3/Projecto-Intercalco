            <div class="my_card_produccion">


              <div class="col-12">
                <h1>Tintas Programadas</h1>
              </div>
              <table class="table table-striped">
                <thead>
                  <th>Color</th>
                  <th>Linea</th>
                  <th>Malla</th>
                  <th>Tiro</th>
                  <th>Retiro</th>

                  <th>Eliminar</th>
                </thead>
                <tbody>
                  <%@orden_produccion.montaje.desarrollos_de_tintas.each do  |desarrollo|%>
                    <tr id=<%="quitar_desarrollo_#{desarrollo.id}"%>>
