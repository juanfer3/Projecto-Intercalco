
<div class="" id="contenido_formulario">

  <div class="offset-md-10">
    <%= link_to '<button class="btn btn-outline-info"><span>Produccion Nueva <i class="ion-android-document"></i></span></button>'.html_safe, cargar_form_formato_url , remote: true %>
  </div>


  <br>
<%= simple_form_for(@orden_produccion) do |f| %>
  <%= f.error_notification %>



<div class="">
  <label for="">Seleccione De Plantilla</label>
  <%=f.select :formato_op_id,FormatoOp.all.map {|i| [i.referencia_de_orden , i.id]}, {}, {required: 'true', autofocus: 'true', class: 'js-example-tags form-control', id: 'busqueda_fop'} %>

</div>



<br>


  <div class="card text-center">

     <div class="card-header">
        <h1>Ordenes De Producción</h1>

     </div>

     <!--Card Block-->
     <div class="card-block">
        <h4 class="card-title"></h4>
        <div class="container">
           <!--Container Con Flexbox-->
           <div class="my_card_pedidos_form">


             <!--Numero de Orden-->
             <div class="col-3">
               <%= f.input :numero_de_orden %>
             </div>

             <!--Mes-->
             <div class="col-3">
               <label for="">Cliente</label>
               <input type="text" name=""  class="form-control op_cliente" id="op_cliente" value="">
             </div>

             <div class="col-3">
               <label for="">Vendedor</label>
               <input type="text" name=""  class="form-control op_Vendedor" id="op_vendedor" value="">
             </div>


             <div class="col-3">
               <label for="">Montaje</label>
               <input type="text" name=""  class="form-control op_montaje" id="op_montaje" value="">
             </div>

             <div class="col-3">
               <label for="">Maquina</label>
               <input type="text" name=""  class="form-control op_montaje" id="op_maquina" value="">
             </div>

             <div class="col-3">
               <label for="">Linea De Color</label>
               <input type="text" name=""  class="form-control op_montaje" id="op_linea_de_color" value="">
             </div>

             <div class="col-3">
               <label for="">Linea De Producto</label>
               <input type="text" name=""  class="form-control op_montaje" id="op_linea_producto" value="">
             </div>

             <div class="col-3">
               <label for="">Material</label>
               <input type="text" name=""  class="form-control op_montaje" id="op_material" value="">
             </div>










           </div>
           <!--/Container con Flexbox-->
        </div>
        <!--Container-->
        <br>
     </div>
     <!--/Card Block-->
  </div>
  <!--/Datos Generales del Pedido---->
  <br>

<br>

<div class="card card-outline-secondary mb-3 text-center">
   <div class="card-block">
      <div class="container">
         <br>
         <br>
         <div class="my_card_pedidos_form">
           <div class="col-4">
             <%=
               f.association :mes,
               collection: Mes.all,
               label_method: :nombre,
               value_method: :id,
               as: :select,
               class:'col-4 my_cliente form-control',
               include_blank: 'Seleccione el mes'
             %>
           </div>


           <!--Fecha De pedido-->
           <div class="col-4">
             <label for="">Fecha De La Orden</label>
             <div class="input-group" >
               <%= f.text_field :fecha , class: "form-control", "data-date-format" => "yyyy/mm/dd", 'data-provide' => 'datepicker'%>
               <span class="input-group-addon " id="basic-addon2"> <i class="ion-calendar"></i> </span>

             </div>
             <p id="campo_fecha_pedido"></p>
           </div>

           <div class="col-4">
             <label for="">Fecha De Compromiso</label>
             <div class="input-group" >
               <%= f.text_field :fecha_compromiso , class: "form-control", "data-date-format" => "yyyy/mm/dd", 'data-provide' => 'datepicker'%>
               <span class="input-group-addon " id="basic-addon2"> <i class="ion-calendar"></i> </span>
             </div>
             <p id="campo_fecha_pedido"></p>
           </div>



         </div>
         <br>
      </div>
   </div>
</div>

<br>

<div class="card card-outline-secondary mb-3 text-center">
   <div class="card-block">
      <div class="container">
         <br>
         <br>
         <div class="my_card_pedidos_form">





                        <div class="col-2">
                          <label for="">Cantidad </label>
                          <%= f.input :cantidad_programada, label: false %>
                        </div>

                        <div class="col-2">
                          <%= f.input :precio_unitario %>
                        </div>

                        <div class="col-2">
                          <%= f.input :valor_total %>
                        </div>


                        <div class="col-2">
                          <label for="">Tamaños Totales</label>
                          <%= f.input :tamanos_total , label: false%>
                        </div>

                        <div class="col-2">
                          <%= f.input :cavidad %>
                        </div>

                        <div class="col-2">
                          <%= f.input :cantidad_hoja %>
                        </div>

         </div>
         <br>
      </div>
   </div>
</div>

<br>

<div class="card card-outline-secondary mb-3 text-center">
   <div class="card-block">
      <div class="container">
         <br>
         <br>
         <div class="my_card_pedidos_form">




                        <div class="col-4">
                          <label for="">Producción</label> <br>
                          <%= f.select :tipo_de_produccion,options_for_select([['Nuevo', 'Nuevo'], ['Repetitivo', 'Repetitivo']]), {}, {required: 'true', autofocus: 'true', class: 'form-control'}%>
                        </div>








                        <div class="col-4">
                          <%= f.input :temperatura %>
                        </div>






                        <div class="col-2">
                          <br>
                          <%= f.input :tiro %>
                        </div>

                        <div class="col-2">
                          <br>
                          <%= f.input :retiro %>
                        </div>
                            <div class="col-12">
                              <label for="">Obsevaciones</label>
                              <%= f.input :observacion, label: false %>
                            </div>
         </div>
      </div>
   </div>
</div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

</div>
