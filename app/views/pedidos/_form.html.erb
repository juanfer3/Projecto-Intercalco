<div id="pedido_factura">
<%= 
  f.association :factura,
  collection: Factura.all,
  label_method: :nombre,
  value_method: :id,
  selected:1,
  as: :select,
  class:'col-4 Factura'
  
%>
</div>

<button type="button" id="pruebaSelect" class="btn btn-outline-success">Success ion-trash-a</button>
  
<!--Datos Generales del Pedido-->
  <div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <a class="nav-link active" href="#">Active</a>
      </li>
      
    </ul>
  </div>
  <!--Card Block-->
  <div class="card-block">
    <h4 class="card-title">Orden De Pedido</h4>
    <div class="container">
      <!--Container Con Flexbox-->
      <div class="my_card_pedidos_form">
        <!--Contacto Select-->
        <div class="col-4">
         <%= f.association :contacto,
          collection: Contacto.all,
          label_method: :nombre_contacto,
          value_method: :id,
          as: :select,
          class:'col-4',
          include_blank: 'Seleccione el Cliente'
         %>
        </div>
        <!--/Contacto Select-->
        
        <!--/Fecha De pedido-->
        <div class="col-4">
          <label class="">Fecha de Pedido</label>
          <div class="input-group date  ">
            
            <%= f.text_field :fecha_de_pedido,
              as: :datetime_picker, readonly: true,
              input_html: {value: @pedido.fecha_entrega.try(:strftime, '%d/%m/%Y'),
              
                data: {date_options: {format: 'DD/MM/YYYY', ignoreReadonly:
                  true}
                  
                }
                
              },
            class:'form-control ', 
            'data-provide'=>'datepicker'  %>
            <div class="input-group-addon alert-info">
                <span class=""><i class="ion-calendar"></i></span>
            </div>
          </div>
      </div>
      <!--/Contacto Select-->
      
      <!--Numero De Pedido-->
      <div class="col-4">
        <%= f.input :numero_de_pedido %>
      </div>
      <!--Numero De Pedido-->
      
      <!--Estado del Pedido-->
      <div class="col-4">
        <label>Estado del pedido</label>
        <div>
        <%= f.collection_check_boxes :condicion_de_pedido, 
        
        [['Bajo Cotizacion'] ,['Producto de linea']], 
         :first,
        :last,
        class:'col-4'
        
        %>
        </div>
      </div>
      <!--/Estado del  Pedido-->
      
      <!--Condicion del  Pedido-->
      <div class="col-4">
          <%= f.input :condicion_de_pedido %>
      </div>
      <!--/Condicion del  Pedido-->
      
      <!--Numero De Cotizacion-->
      <div class="col-4">
        <%= f.input :numero_cotizacion %>
      </div>
      <!--/Numero De Cotizacion-->
      
      <!--Separador-->
        <div class="col-12">
          <hr>
        </div>
      <!--/Separador-->
      
      <!--Tipo de Trabajo-->
        <div class="col-4">
          <label>Tipo de Trabajo </label>
          <select class="form-control " id="mySelect">
            <option>Viejo</option>
            <option>Nuevo</option>
          </select>
        </div>
      <!--/Tipo de Trabajo-->
      
      <!--Producto-->
        <div class="col-4">
          <%= f.input :producto %>
        </div>
      <!--/Producto-->
      
      <!--Linea de Impresion-->  
        <div class="col-4">
          <%= f.association :linea_de_impresion,
          collection: LineaDeImpresion.all,
          label_method: :tipo_de_linea,
          value_method: :id,
          as: :select,
          class:'col-4',
          include_blank: 'Linea de Impresion'
          %>
        </div>
      <!--/Linea de Impresion-->
        
      <!--Forma de pago-->
        <div class="col-4">
          <%= f.input :forma_de_pago %>
        </div>
      <!--/Forma de pago-->
      
      <!--Arte Select-->
        <div class="col-4">
          <%= f.select :arte,[['Cliente'], ['Intercalco']], include_blank:'Arte Por Parte de', class:"form-control col-4" %>
        </div>
      <!--/Arte Select-->
      
      <!--Descripcion-->
        <div class="col-4">
          <%= f.input :descripcion %>
        </div>
      <!--/Descripcion-->
        
        
        
      </div>
      <!--/Container con Flexbox-->
    </div>
    <!--Container-->
    <br>
  </div>
  <!--/Card Block-->
</div>
<!--/Datos Generales del Pedido---->

