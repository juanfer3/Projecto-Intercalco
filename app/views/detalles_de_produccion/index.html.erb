<p id="notice"><%= notice %></p>

<h1>Detalles De Produccion</h1>

<table>
  <thead>
    <tr>
      <th>Orden de produccion</th>
      <th>Codigo</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th>Fecha</th>
      <th>Inventario</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detalles_de_produccion.each do |detalle_de_produccion| %>
      <tr>
        <td><%= detalle_de_produccion.orden_de_produccion %></td>
        <td><%= detalle_de_produccion.codigo %></td>
        <td><%= detalle_de_produccion.descripcion %></td>
        <td><%= detalle_de_produccion.cantidad %></td>
        <td><%= detalle_de_produccion.fecha %></td>
        <td><%= detalle_de_produccion.inventario %></td>
        <td><%= detalle_de_produccion.estado %></td>
        <td><%= link_to 'Show', detalle_de_produccion %></td>
        <td><%= link_to 'Edit', edit_detalle_de_produccion_path(detalle_de_produccion) %></td>
        <td><%= link_to 'Destroy', detalle_de_produccion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

