<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cargo</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbodyclass="">
    <% @roles.each do |rol| %>
      <tr>
        <td><%= rol.cargo %></td>
        <td><%= rol.estado %></td>
        <td><%= link_to '<button class="btn btn-outline-warning"><span><i class="ion-paintbrush"></i></i></span></button>'.html_safe, edit_rol_path(rol) %></td>
        <td><%= link_to '<button class="btn btn-outline-danger"><span><i class="ion-trash-a"></i></i></span></button>'.html_safe, rol, method: :delete, data: { confirm: 'REALMENTE DESEA ELIMINAR ESTE ROL?, LA INFORMACION DEL USUARIO SERA ELIMINADA.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

