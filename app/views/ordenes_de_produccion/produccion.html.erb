<p id="notice"><%= notice %></p>

<h1>Pedidos Para Producción</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Numero de pedido</th>
      <th>Descripcion Del Producto</th>
      <th>Numero de Cotización</th>
      <th>Fecha de pedido</th>
      <th>Digitado</th>
      <th>Estado de Pedido</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td class="cliente"><%= pedido.contacto.cliente.nombre %></td>
        <td ><%=best_in_place pedido, :numero_de_pedido,as: :input %></td>
        <td class="descripcion"><%= pedido.descripcion %></td>
        <td><%= pedido.numero_cotizacion %></td>
        <!--td><!--%= pedido.producto %></td-->
        <td><%= pedido.fecha_de_pedido %></td>
        <td><%= pedido.created_at%></td>
        <td class="pedido_id" ><%= pedido.id %></td>
        <td><button type="button" id="crearProduccion" data-toggle="modal" data-target="#exampleModal" class="btn btn-outline-danger crearProduccion"><span><i class="ion-plus-round"></i></span></button></td>


        <td><%= link_to '<button type="button" id="crearProduccion" data-toggle="modal" data-target="" class="btn btn-outline-info"><span><i class="ion-plus-round"></i></span></button>'.html_safe, orden_de_produccion_path(pedido), id:'nuevo_task', remote:true %></td>
        <!--td><!--%= link_to '<button class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal"><span><i class="ion-clipboard"></i></i></span></button>'.html_safe, pedido %></td-->
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" id="" data-toggle="modal" data-target="" class="btn btn-outline-info"><span><i class="ion-plus-round"></i></span></button>'.html_safe, new_orden_de_produccion_path, id:'nuevo_task', remote:true %>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Open modal for @getbootstrap</button>






<div class="input-group" >
  <input type="text" data-date-format="yyyy/mm]/dd" class="form-control " data-provide='datepicker' placeholder="Recipient's username" aria-describedby="basic-addon2">
  <span class="input-group-addon " id="basic-addon2"> <i class="ion-calendar"></i> </span>
</div>






<div class="modal my_modal fade my_modal_orden_pedido " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog  modal-lg"  role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ordenes de Producción</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="activarmodal"></div>
      <div class="modal-body">
        <form id="activarmodal">

        </form>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>
