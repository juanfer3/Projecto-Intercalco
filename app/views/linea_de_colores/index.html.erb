<p id="notice"><%= notice %></p>

<h1>Linea De Colores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @linea_de_colores.each do |linea_de_color| %>
    <tr>
      <td><%= linea_de_color.nombre %></td>
      <td><%= link_to '<button class="btn btn-outline-warning"><span><i class="ion-paintbrush"></i></span></button>'.html_safe.html_safe, edit_linea_de_color_path(linea_de_color) %></td>
      <td><%= link_to '<button class="btn btn-outline-danger"><span><i class="ion-trash-a"></i></i></span></button>'.html_safe, lineas_de_colores_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Linea De Color', new_linea_de_color_path %>
